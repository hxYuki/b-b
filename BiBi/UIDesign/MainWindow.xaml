                HorizontalAlignment="Left" Width="76" >
                Add Item
            </Button>
            
        </StackPanel>
        <Border Width="5" BorderBrush="White" BorderThickness="1,1,1,1" Background="Blue" />
        <StackPanel Orientation="Vertical" Width="400">
            <StackPanel Orientation="Horizontal" Height="30">
                
                <Image Source="2.png" Height="20" Width="20" Stretch="Uniform"></Image>
                <TextBlock Foreground="Blue" 
                           HorizontalAlignment="Center" VerticalAlignment="Center" >百度网盘</TextBlock>
                <Image Source="3.png"></Image>
            </StackPanel>
            <Border Height="5" BorderBrush="White" BorderThickness="1,1,1,1" Background="Blue" />
            <!-- 对话框 -->
                <ListBox Background="Blue">
                    <ListBoxItem>
                        <Grid>
                            <!--Speech bubble rectangle-->
                            <Border 
                            CornerRadius="7"
                                Padding="15"
                            Background="AliceBlue"/>

                            <!--message text-->
                        <TextBlock 
                               Grid.Row="0"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"
                               Foreground="BlueViolet"
                               FontFamily="10"
                               Text=" This char app is awesomeeeee "
                               />
                    </Grid>
                    </ListBoxItem>

                <ListBoxItem>
                    <Grid HorizontalAlignment="Right">
                        <!--Speech bubble rectangle-->
                        <Border 
                            CornerRadius="7"
                                Padding="15"
                            Background="AliceBlue"/>

                        <!--message text-->
                        <TextBlock 
                               Grid.Row="0"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"
                               Foreground="BlueViolet"
                               FontFamily="10"
                               Text=" This char app is awesomeeeee "
                               />
