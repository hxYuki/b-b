            <ListBox Margin="10,10,0,13" Name="listBox1" HorizontalAlignment="Left"
                       VerticalAlignment="Top" Width="230" Height="200">
                <ListBoxItem>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="2.png"/>
